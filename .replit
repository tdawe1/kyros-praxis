modules = ["nodejs-20", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Orchestrator Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Console Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Terminal Daemon"

[[workflows.workflow]]
name = "Orchestrator Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kyros-praxis/services/orchestrator && export SECRET_KEY=dev-secret-key && export DATABASE_URL=$DATABASE_URL && uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[[workflows.workflow]]
name = "Console Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kyros-praxis/services/console && PORT=5000 npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Terminal Daemon"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd kyros-praxis/services/terminal-daemon && PORT=8080 npm run dev"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "cloudrun"
