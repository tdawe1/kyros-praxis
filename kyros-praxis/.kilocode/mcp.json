{
  "mcpServers": {
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "/kyros-praxis"
      ],
      "disabled": false,
      "alwaysAllow": [
        "status",
        "show",
        "diff --name-only HEAD",
        "rev-parse",
        "ls-files"
      ]
    }
  }
}