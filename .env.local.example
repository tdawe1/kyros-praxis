# Environment variables for Kyros Praxis Local Development
# Copy this file to .env.local and fill in the values for local development

# =============================================================================
# Security Configuration - LOCAL DEVELOPMENT VALUES
# =============================================================================
NEXTAUTH_SECRET=local_nextauth_secret_for_development_minimum_32_chars
SECRET_KEY=local_app_secret_for_development_minimum_32_chars
JWT_SECRET=local_jwt_secret_for_development_minimum_32_chars
CSRF_SECRET=local_csrf_secret_for_development_minimum_32_chars

# =============================================================================
# Database Configuration - LOCAL DEVELOPMENT VALUES
# =============================================================================
POSTGRES_DB=kyros
POSTGRES_USER=kyros_user
POSTGRES_PASSWORD=localpass123
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration - LOCAL DEVELOPMENT VALUES
# =============================================================================
REDIS_HOST=kyros-redis-local
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Application URLs - LOCAL DEVELOPMENT VALUES
# =============================================================================
NEXTAUTH_URL=http://localhost:3001
API_URL=http://localhost:8000

# =============================================================================
# Notes
# =============================================================================
# 1. These are local development values only
# 2. Generate proper secrets for production environments
# 3. This file can be committed as it contains only development data