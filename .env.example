# Environment variables for Kyros Praxis
# Copy this file to .env and fill in the values
# IMPORTANT: Generate secure secrets (minimum 32 characters) using: openssl rand -hex 32

# =============================================================================
# Security Configuration - REQUIRED
# =============================================================================
# Next.js Authentication Secret (minimum 32 characters)
NEXTAUTH_SECRET=your_very_secure_nextauth_secret_minimum_32_chars_generated_with_openssl_rand_hex_32

# Application Secret Key (minimum 32 characters)
SECRET_KEY=your_very_secure_app_secret_minimum_32_chars_generated_with_openssl_rand_hex_32

# JWT Secret (minimum 32 characters)
JWT_SECRET=your_very_secure_jwt_secret_minimum_32_chars_generated_with_openssl_rand_hex_32

# CSRF Secret (minimum 32 characters)
CSRF_SECRET=your_very_secure_csrf_secret_minimum_32_chars_generated_with_openssl_rand_hex_32

# =============================================================================
# Database Configuration - REQUIRED
# =============================================================================
# PostgreSQL Database
POSTGRES_DB=kyros
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_minimum_32_chars
POSTGRES_PORT=5432

# Alternative DB environment variables (for compatibility)
DB_NAME=kyros
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_minimum_32_chars
DB_HOST=kyros-praxis-postgres
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=kyros-praxis-redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_minimum_32_chars

# =============================================================================
# External APIs and Services
# =============================================================================
# Qdrant Vector Database API Key
QDRANT_API_KEY=your_qdrant_api_key_if_required

# =============================================================================
# Application URLs
# =============================================================================
NEXTAUTH_URL=http://localhost:3001
API_URL=http://kyros-praxis-orchestrator:8000
FRONTEND_HOST=http://localhost:3001

# =============================================================================
# CORS Configuration
# =============================================================================
BACKEND_CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900
RATE_LIMIT_BURST=0
PRODUCTION_RATE_LIMIT_REQUESTS=1000
PRODUCTION_RATE_LIMIT_WINDOW=3600
PRODUCTION_RATE_LIMIT_BURST=50

# =============================================================================
# Monitoring (for production)
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# Notification Services (Optional)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_ALERTS_URL=https://your-monitoring-system.com/api/alerts
WEBHOOK_API_TOKEN=your_webhook_api_token
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# =============================================================================
# First-time setup (optional)
# =============================================================================
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=your_first_superuser_password
ENABLE_SEED=false

# =============================================================================
# Notes
# =============================================================================
# 1. Always generate new secrets for production using: openssl rand -hex 32
# 2. Never commit .env files to version control
# 3. Use environment-specific .env files for different deployments
# 4. Rotate secrets regularly in production
# 5. Use secret management services in production (AWS Secrets Manager, etc.)